@model IEnumerable<PhoneShop.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý tài khoản</a>
        </li>
    </ul>
}
<br />
<section class="content">

    <!-- Default box -->
    <div class="card">
     
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                           Tên Tk
                        </th>
                        <th>
                           Số điện thoại
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                           Ngày tạo
                        </th>


                        </th>
                        <th>
                            Phân quyền
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="trow_@item.Id">

                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                               @item.CreateDate
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>

                                <a class="btn btn-outline-primary btnDelete" data-id="@item.Id" href="#">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>



<!-- /.content -->
@section scripts{

    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');

                var conf = confirm("ban muoon xoa chua");

                if (conf == true) {

                    $.ajax({

                        url: '/admin/Accounts/Delete',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('trow_' + id).remove();
                                alert(rs.msg);
                                location.reload();
                            }
                            else {
                                alert(rs.msg);
                                location.reload();
                            }
                        }

                    });

                }
            });
        });
    </script>


}


