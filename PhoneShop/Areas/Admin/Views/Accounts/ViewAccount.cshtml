@model PhoneShop.Models.Account
@using PhoneShop.Models;
@{
    ViewData["Title"] = "ViewAccount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    List<Order> ListOrder = ViewBag.ListOrder;

}
<style>
    .center-tb{
        width: 50px;
    }
</style>

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý thông tin tài khoản</a>
        </li>
    </ul>
}
<br />
<section class="content">

    <div class="col-md-12">
        <div class="card">



            <div class="card mb-4">
                <div class="card-header">
                    Thông tin cá nhân
                </div>

                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Số điện thoại:</strong> @Model.Phone</p>
                    <p class="card-text"><strong>Ngày tạo:</strong> @Model.CreateDate</p>
                </div>
               
            </div>
            @if (ListOrder.Count == 0)
            {
                <p>Hiện tại chưa có đơn hàng nào</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center center-tb">Mã đơn hàng</th>
                            <th class="text-center ">Ngày đặt</th>
                            <th class="text-center">PTTT</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ListOrder)
                        {
                            <tr>
                                <td class="text-center">@item.Id_Order</td>
                                <td class="text-center">@item.Order_Date.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    @if (item.PaymentMethod == 1)
                                    {
                                        <p>COD</p>
                                    }
                                    else if (item.PaymentMethod == 2)
                                    {
                                        <p>VnPay</p>
                                    }
                                    else
                                    {
                                        <p>Momo</p>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/admin/Order/ViewOrder/@item.Id_Order">
                                        <i class="fas fa-eye fa-lg" style="color: #74C0FC;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }




            

            </div>
    </div>
    </section>

