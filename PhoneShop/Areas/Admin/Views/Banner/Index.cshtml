@model IEnumerable<PhoneShop.ModelViews.BannerViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý Banner</a>
        </li>
    </ul>
}
<br />
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Banner</h3>

            <div class="card-tools">
                <a href="/admin/Banner/Create" class="btn btn-danger">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Sản phẩm liên quan
                        </th>
                        <th>
                            Vị trí
                        </th>
                        <th>
                            Hình ảnh
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                
                                    @{
                                        if (item.ProductId == null)
                                        {
                                        <td style="color:red">Không có sản phẩm liên kết</td>
                                    }
                                    else
                                    {
                                        <td>@item.ProductId</td>
                                    }

                                        
                                      }

                                 
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Position)
                                </td>
                                <td>
                                    <img src="~/images/Banner/@item.Image" style="height:40px; width:60px">
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/admin/Banner/Update/@item.Id">Sửa</a>
                                    <a class="btn btn-outline-primary btnDelete" data-id="@item.Id" href="#">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Chưa có bảng ghi</td>


                        </tr>
                    }

                </tbody>
            </table>



        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>






<!-- /.content -->
@section scripts{

    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');

                var conf = confirm("ban muoon xoa chua");

                if (conf == true) {

                    $.ajax({

                        url: '/admin/Banner/Delete',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('trow_' + id).remove();
                                location.reload();
                            }
                        }

                    });

                }
            });
        });
    </script>


}




