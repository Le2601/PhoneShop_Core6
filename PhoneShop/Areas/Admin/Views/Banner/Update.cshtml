@model PhoneShop.ModelViews.BannerViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý Banner</a>
        </li>
    </ul>
}
<br />
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa Banner</h3>

          
        </div>
        <div class="card-body">
            
            <form asp-action="Update" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Hình ảnh</label>
                    <br />
                    <img style="width: 200px;" src="~/images/Banner/@Model.Image" />
                    <input type="file" name="img" id="fileInput" class="form-control" />
@*                     <input type="file" name="Image" class="form-control"  />
 *@
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"> Vị trị hiển thị</label>
                    <input asp-for="Position" value="@Model.Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Ghi chú</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">Sản phẩm liên quan</label>
                    @Html.DropDownListFor(x => x.ProductId,  ViewBag.Product as SelectList, "Chọn Sản phẩm", new { @class = "form-control", @placeholder = "tên " })
                    @Html.ValidationMessageFor(x => x.ProductId, "Không thể trống", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>



        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

