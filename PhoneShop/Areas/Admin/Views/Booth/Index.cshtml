@model List<PhoneShop.Models.Booth_Information>
@using PhoneShop.Areas.Admin.Data;
@using PhoneShop.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
  
    List<BoothData> getDataTotal = ViewBag.getData;
}





@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý gian hàng</a>
        </li>
    </ul>
}




<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách gian hàng</h3>
            

        </div>
        <div class="card-body" style="min-height:700px">

            <table id="example12" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                           Tên gian hàng
                        </th>  
                        <th>Trạng thái</th>
                        
                        <th>Doanh Thu</th>
                        <th>
                           Thông tin gian hàng
                        </th>



                        
                    </tr>
                </thead>
                <tbody>
                   
                        @foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">




                                <td>
                                    @item.Creare_At.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @item.ShopName
                                </td>
                                <td>
                                @if (@item.IsActive)
                                {
                                    <p style="color:blue">Hoạt động</p>
                                }
                                else
                                {
                                    <p>Ẩn</p>
                                }
                            </td>




                            <td>
                                @foreach (var item_Total in getDataTotal)
                                {
                                    if (item_Total.BoothId == item.Id)
                                    {
                                        <p>@PhoneShop.Extension.Extension.ToVnd((double)item_Total.TotalPrice_Booth!)</p>
                                    }
                                   



                                }
                            </td>





                                <td>
                                    <a class="btn btn-danger" href="/admin/Booth/Detail_Booth/@item.Id">Xem</a>
                                   
                                </td>
                            </tr>
                        }
                    
                  

                </tbody>
            </table>



        </div>

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <!-- jQuery -->

    <script>
        $(function () {
            $("#example12").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>

   


}



