@model List<PhoneShop.Models.Delete_Booth>
@{
    ViewData["Title"] = "List_DelBooth";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý gian hàng</a>
        </li>
    </ul>
}




<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách gian hàng</h3>


        </div>
        <div class="card-body" style="min-height:700px">

            <table id="example12" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                           #
                        </th>
                        <th>
                            Tên gian hàng
                        </th>

                        <th>Nội dung</th>
                       
                        <th>Trạng thái</th>



                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr id="trow_@item.Id">




                            <td>
                                @item.Content
                            </td>
                            <td>
                                @item.Content
                            </td>

                            <td>
                                @item.Status
                            </td>



                            






                            <td>
                                <a class="btn btn-danger comfirmDel" data-id="@item.Id">Xóa</a>

                            </td>
                        </tr>
                    }



                </tbody>
            </table>



        </div>

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <!-- jQuery -->


    <script>
        $(document).ready(function () {
            $('body').on('click', '.comfirmDel', function () {
                var id = $(this).data('id');

                var conf = confirm("Xác nhận xóa gian hàng");

                if (conf == true) {

                    $.ajax({

                        url: '/admin/Booth/Comfirm_DelBooth',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('trow_' + id).remove();
                                location.reload();
                            }
                            else {
                                alert("Lỗi không thể xóa");
                                location.reload();
                            }
                        }

                    });

                }
            });
        });
    </script>


}


