@model List<PhoneShop.Models.Product>

<div class="card-body" style="min-height:700px">

    <table id="example12" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Tên Sp
                </th>
                <th>
                   Hình ảnh
                </th>
                <th>
                   Số lượng
                </th>
                <th>Giá tiền</th>
               


                
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
            {
                <tr>
                    <td><a href="/admin/Product/Detail_Product/@item.Id">@item.Title</a> </td>
                    <td><img src="~/images/Product/@item.ImageDefaultName" width="100" height="100" style="border: solid 1px " /></td>
                    <td>@item.Quantity</td>
                    @if(item.Discount > 0)
                    {
                        <td>@PhoneShop.Extension.Extension.ToVnd((double)item.Price)
                            <br>
                            <p style="color:red">Giảm giá: @PhoneShop.Extension.Extension.ToVnd((double)item.Discount)</p>
                        </td>
                    }
                    else
                    {
                        <td>
                            @PhoneShop.Extension.Extension.ToVnd((double)item.Price)
                            
                        </td>
                    }
                </tr>
            }

        </tbody>
    </table>



</div>