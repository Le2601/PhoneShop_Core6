@model IEnumerable<PhoneShop.ModelViews.CategoryModelView>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý danh mục sản phẩm</a>
        </li>
    </ul>
}
<br />

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/Category/Create" class="btn btn-danger">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                           Tiêu đề
                        </th>
                        
                        <th style="text-align:center">
                           Hình ảnh
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>

                                <td style="text-align:center">
                                    
                                    <img style="width:270px; height: 120px" src="~/images/Category/@item.Image">
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/admin/Category/Edit/@item.Id">Sửa</a>
                                    <a class="btn btn-outline-primary btnDelete" data-id="@item.Id" href="#">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Chưa có bảng ghi</td>


                        </tr>
                    }

                </tbody>
            </table>



        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>






<!-- /.content -->
@section scripts{

    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');

                var conf = confirm("bạn muốn xóa chứ");

                if (conf == true) {

                    $.ajax({

                        url: '/admin/Category/Delete',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('trow_' + id).remove();
                                location.reload();
                            }
                        }

                    });

                }
            });
        });
    </script>


}




