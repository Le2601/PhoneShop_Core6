@model PhoneShop.ModelViews.IntroduceViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Article" class="nav-link">Giới thiệu</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhật</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <form method="post" asp-action="Update" asp-controller="Introduces">

                    <label asp-for="Content" class="control-label">Nội dung</label>

                    @Html.TextAreaFor(x => x.Content, new { @class = "form-control", @placeholder = "Nội dung", @id = "summernote" })

                    <input type="submit" value="Update" />


                </form>

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

            </div>

        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>

    <!-- /.card -->

</section>



@section scripts{

    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $('#summernote').summernote({
            placeholder: 'Nội dung',
            tabsize: 2,
            height: 100
        });
    </script>

}
