@using PhoneShop.ModelViews

@model List<SpecificationsViewModel>

@if (Model != null && Model.Count() > 0)
{

    foreach (var item in Model)
    {
        <div class="form-group">
            <label class="control-label">Màn hình</label>
            <input name="Display" class="form-control" value="@item.Display"  required />

        </div>
        <div class="form-group">
            <label class="control-label">Hệ điều hành</label>
            <input name="OperatingSystem" class="form-control" value="@item.OperatingSystem" />

        </div>
        <div class="form-group">
            <label class="control-label">CPU</label>
            <input name="Processor" class="form-control" value="@item.Processor" />

        </div>
        <div class="form-group">
            <label class="control-label">Bộ nhớ trong</label>
            <input name="InternalStorage" class="form-control" value="@item.InternalStorage" />

        </div>
        <div class="form-group">
            <label class="control-label">RAM</label>
            <input name="RandomAccessMemory" class="form-control" value="@item.RandomAccessMemory" />

        </div>
        <div class="form-group">
            <label class="control-label">Camera</label>
            <input name="Camera" class="form-control" value="@item.Camera" />

        </div>
        <div class="form-group">
            <label class="control-label">Pin</label>
            <input name="Battery" class="form-control" value="@item.Battery" />

        </div>

        <div class="form-group">
            <label class="control-label">Chống nước</label>
            <input name="WaterResistance" class="form-control" value="@item.WaterResistance" />

        </div>
        <div class="form-group">
            <label class="control-label">Kích thước và trọng lượng</label>
            <input name="DimensionsAndeight" class="form-control" value="@item.DimensionsAndeight" />

        </div>

        <div class="form-group">
            <label class="control-label">Màu sắc</label>
            <input name="Color" class="form-control" value="@item.Color" />

        </div>

        <div class="form-group">
            <label class="control-label">Kết nối</label>
            <input name="Connectivity" class="form-control" value="@item.Connectivity" />

        </div>


    }
}
