@model PhoneShop.Areas.Admin.Data.SupportContentData

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quản lý nội dung</a>
        </li>
    </ul>
}


<br />


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới</h3>


        </div>
        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdSpDirectory" class="control-label">Loại nội dung</label>
                    <select asp-for="IdSpDirectory" class="form-control" asp-items="ViewBag.IdSpDirectory"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Xác nhận" class="btn btn-primary" />
                </div>
            </form>

            <div>
                @Html.ActionLink("Trở về", "Index")
            </div>



        </div>
        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>

    <!-- /.card -->

</section>
<!-- /.content -->
