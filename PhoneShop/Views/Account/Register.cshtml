@using PhoneShop.Models
@model PhoneShop.Models.Account
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form action="#">

    <div class="form-group">
        <label for="Usename">FullName</label>
        <input type="text" name="FullName" class="form-control" autocomplete="off">
    </div>
    <span asp-validation-for="FullName" class="text-danger"></span>

    <div class="form-group">
        <label for="Usename">Phone</label>
        <input type="text" name="Phone" class="form-control" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="Usename">Email</label>
        <input type="text" name="Email" class="form-control" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="Password" class="form-control" id="pwd">
    </div>

 @*    <div class="form-group">
        <label for="pwd">Confirm Password:</label>
        <input type="password" class="form-control" id="pwd">
    </div> *@
    <label style="color:red">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="error-message">
                @ViewBag.Error
            </div>
        }
    </label><br>
    <hr>


    <button type="submit" class="btn btn-default btn-lg">Submit</button>
   @*  <button type="submit" class=" pull-right btn-link"><a href="www.google.com">Forget password</a></button> *@

</form>
<br />
<a href="#" class="pull-right btn btn-block btn-danger"> Already Register ?   </a>

