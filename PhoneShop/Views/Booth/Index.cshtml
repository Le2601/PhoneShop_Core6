@model List<PhoneShop.Data.BoothData>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .store-container {
        display: flex;
        flex-wrap: wrap; 
        justify-content: space-between; 
        margin: 0 -10px; 
    }

    .store-card {
        flex: 0 0 calc(33.33% - 20px);
        margin: 10px;
        box-sizing: border-box; 
    }
  
    .store-card {
        background-color: #f9f9f9;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin: 20px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 350px;
        border: 1px solid #eaeaea;
    }

        .store-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

   
    .store-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #ddd;
        margin-bottom: 15px;
    }

    
    .store-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        letter-spacing: 0.5px;
    }

    
    .store-info {
        display: flex;
        justify-content: space-around;
        width: 100%;
        margin: 10px 0;
    }

    .store-rating,
    .store-followers {
        font-size: 12px;
        color: #555;
    }

   
    .store-products {
        background-color: #eee;
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 500;
        color: #333;
        margin-bottom: 10px;
    }

    
    .store-button {
        background-color: #ff5722;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .store-button:hover {
            background-color: #e64a19;
        }

    
</style>


<div class="container" style="height:700px;background:white">
    <br />
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="background:white">
            <li class="breadcrumb-item" style="font-size: 18px;"><a href="#">Trang chủ</a></li>
            <li class="breadcrumb-item active" style="font-size: 18px;" aria-current="page">Danh Sách Gian Hàng</li>

        </ol>
    </nav>

   

    <div class="store-container">
        @foreach (var item in Model)
        {
            <div class="store-card">
                <img src="~/images/AvatarBooth/@item.Avatar" alt="Store Image" class="store-image">
                <div class="store-title">@item.BoothName</div>
                <div class="store-products">Sản phẩm: @item.Quantity_Product</div>
                <div class="store-info">
                    <div class="store-rating">Đánh giá: @item.Total_Comment</div>
                    <div class="store-followers">Người theo dõi: @item.Followers </div>
                </div>
                <button class="store-button">Xem Ngay</button>
            </div>
        
        }
       
       
    </div>



</div>