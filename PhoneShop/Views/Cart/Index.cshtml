@section Scripts{
   
    
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');

               

                

                    $.ajax({

                        url: '/Cart/Delete',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                            $('trow_' + id).remove();
                            location.reload();

                           


                            }
                            else {
                            swal({
                                title: "Có lỗi xảy ra",
                                text: rs.msg,
                                icon: "error",
                                button: "OK",
                            });
                            }
                        }

                    });

                
            });
        });
    </script>

            <script>
