@model List<PhoneShop.Models.Voucher>
@using PhoneShop.Extension;
@using PhoneShop.Models;
@{
    ViewData["Title"] = "List_Voucher_Booth";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
   
}
<style>
    .coupon {
        background-color: #f2f2f2;
        border: 2px dashed #ccc;
        padding: 20px;
        text-align: center;
        font-family: Arial, sans-serif;
        max-width: 300px;
        margin: 0 auto;
    }

        .coupon h2 {
            color: #ff6b6b;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .coupon p {
            font-size: 16px;
            margin-bottom: 5px;
        }

        .coupon .discount {
            font-weight: bold;
            font-size: 20px;
            color: #2ecc71;
        }

        .coupon .min-order {
            font-size: 14px;
            color: #7f8c8d;
        }

        .coupon .expiration {
            font-size: 14px;
            color: #7f8c8d;
        }

        .coupon .conditions {
            font-size: 14px;
            color: #7f8c8d;
        }

        .coupon button {
            background-color: #2980b9;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            margin-top: 20px;
        }

            .coupon button:hover {
                background-color: #3498db;
            }

</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div>
    @if (TempData["ApplyVoucherSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["ApplyVoucherSuccess"]
        </div>
    }
    @if (TempData["NoApplyVoucher"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["NoApplyVoucher"]
        </div>
    }
    @if (TempData["CheckDate"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckDate"]
        </div>
    }
    @if (TempData["CheckPrice"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckPrice"]
        </div>
    }
    @if (TempData["CheckQuantityVoucher"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckQuantityVoucher"]
        </div>
    }
</div>

@if(Model != null)
{
   
    @foreach (var item in Model)
    {
      

        <div class="coupon">
            <h2>@item.Description</h2>
            <p class="discount">Giảm @Extension.ToVnd((double)item.DiscountProduct)</p>
            <p class="min-order">Đơn Tối Thiểu @Extension.ToVnd((double)item.DiscountConditions)</p>
            <p class="expiration">HSD: @item.ExpiryDate.ToString("dd/MM/yyyy")</p>
            <p class="conditions">Số lượng: @item.Quantity</p>
            
            <form asp-action="Apply_VoucherByProduct" asp-controller="Cart" method="post">
                <input hidden type="text" value="@item.Id" name="VoucherId">
                <input hidden type="text" value="@ViewBag.CheckProductInCart" name="ProductId">

                <input type="submit" style="width:80px" class="btn-use-voucher" value="Sử dụng">
            </form>
        </div>
    }
    <div class="coupon">
        <h2>Không sử dụng phiếu giảm giá</h2>
        <form asp-action="Apply_VoucherByProduct" asp-controller="Cart" method="post">
            <input hidden type="text" value="@ViewBag.CheckProductInCart" name="NoApplyVoucher">
           

            <input type="submit" style="width:80px" class="btn-use-voucher" value="Sử dụng">
        </form>
    </div>
   


}
else
{
    <a>CHua co voicher</a>
}

