@model List<PhoneShop.Models.Voucher>
@using PhoneShop.Extension;
@using PhoneShop.Models;
@{
    ViewData["Title"] = "List_Voucher_Booth";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
   
}
<style>
    .voucher-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background-color: #f9f9f9;
    }

    .voucher-header {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

        .voucher-header h3 {
            margin: 0;
        }

    .voucher-body {
        margin-top: 10px;
    }

        .voucher-body p {
            margin-bottom: 10px;
        }

        .voucher-body strong {
            font-weight: bold;
            margin-right: 5px;
            display: inline-block;
            width: 120px;
        }

    .btn-use-voucher {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .btn-use-voucher:hover {
            background-color: #218838;
        }

        .btn-use-voucher:focus {
            outline: none;
        }

</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div>
    @if (TempData["ApplyVoucherSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["ApplyVoucherSuccess"]
        </div>
    }
    @if (TempData["CheckDate"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckDate"]
        </div>
    }
    @if (TempData["CheckPrice"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckPrice"]
        </div>
    }
    @if (TempData["CheckQuantityVoucher"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["CheckQuantityVoucher"]
        </div>
    }
</div>

@if(Model != null)
{
    @foreach (var item in Model)
    {
        <div class="voucher-card">
            <div class="voucher-content">
                <div class="voucher-header">
                    <h3>@item.Description</h3>
                </div>
                <div class="voucher-body">
                    <p><strong>Mã giảm giá:</strong>@item.Code </p>
                    <p><strong>Giảm: </strong> @Extension.ToVnd((double)item.DiscountProduct)</p>
                    <p><strong>Điều kiện giảm:</strong> @Extension.ToVnd((double)item.DiscountConditions)</p>
                    <p><strong>Số lượng:</strong> @item.Quantity</p>
                    <p><strong>Ngày hết hạn:</strong> @item.ExpiryDate.ToString("dd/MM/yyyy")</p>
                </div>
                <form asp-action="Apply_VoucherByProduct" asp-controller="Cart" method="post">
                    <input hidden type="text" value="@item.Id" name="VoucherId" >
                    <input hidden type="text" value="@ViewBag.CheckProductInCart" name="ProductId">

                    <input type="submit" style="width:30px" class="btn-use-voucher" value="Lưu">
                </form>
                
            </div>
        </div>
    }
   


}
else
{
    <a>CHua co voicher</a>
}

