@model PhoneShop.Models.Order
@using PhoneShop.Models;
@{
    ViewData["Title"] = "Order_Success";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Order_Details Is_Info_Address = ViewBag.Info_Address;

}

<style>
    .h1, h2 {
        color: #333;
    }

    .order-info {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 30px;
    }

        .order-info p {
            margin-bottom: 10px;
            font-size: 16px;
            color: #555;
        }

            .order-info p strong {
                font-weight: bold;
                color: #333;
            }

        .order-info .order-number {
            font-size: 20px;
            font-weight: bold;
            color: #007bff;
        }

        .order-info .order-date {
            font-size: 16px;
            color: #777;
        }

        .order-info .order-total {
            font-size: 18px;
            font-weight: bold;
            color: #28a745;
        }

        .order-info .payment-method {
            font-size: 16px;
            color: #555;
        }

        .order-info .shipping-address {
            font-size: 16px;
            color: #555;
        }
</style>

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" style="font-size: 18px;"><a href="/~">Trang chủ</a></li>
            <li class="breadcrumb-item active" style="font-size: 18px;" aria-current="page">Giỏ hàng</li>
        </ol>
    </nav>

</div>

<div class="container">
    <h1>Đặt hàng thành công</h1>

    <div class="order-info">
        <h2>Thông tin đơn hàng</h2>
        <p>Mã đơn hàng: @Model.Id_Order</p>
        <p>Ngày đặt hàng: @Model.Order_Date</p>
        <p>Tổng tiền: @Model.Total_Order</p>
        @if(Model.PaymentMethod == 1)
        {
            <p>Phương thức thanh toán: Thanh toán khi nhận hàng</p>
        }
        else
        {
            <p>Phương thức thanh toán: Thanh toán trực tuyến</p>
        }

        <p>Địa chỉ giao hàng: @Is_Info_Address.Address</p>
    </div>

    
    <a class="btn btn-success" href="~/">Trở về trang chủ</a>
</div>



