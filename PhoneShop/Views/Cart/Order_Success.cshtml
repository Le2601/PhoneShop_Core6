@model PhoneShop.Models.Order
@using PhoneShop.Models;
@{
    ViewData["Title"] = "Order_Success";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Order_Details Is_Info_Address = ViewBag.Info_Address;

}

<style>
    .order-info {
        background-color: #f5f5f5;
        border: 1px solid #ddd;
        padding: 20px;
        margin-bottom: 30px;
    }

        .order-info h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .order-info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .order-info b {
            font-weight: bold;
        }

        .order-info .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            color: #fff;
            background-color: #28a745;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .order-info .btn:hover {
                background-color: #218838;
            }
</style>



<div class="container" style="background:white;padding-top:0px;padding-bottom:50px">
    
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb" style="background:white;padding:10px">
                <li class="breadcrumb-item" style="font-size: 18px;"><a href="/~">Trang chủ</a></li>
                <li class="breadcrumb-item active" style="font-size: 18px;" aria-current="page">Giỏ hàng</li>
                <li class="breadcrumb-item active" style="font-size: 18px;" aria-current="page">Đặt hàng thành công</li>
            </ol>
        </nav>

  
    <h2 style="text-align:center">Đặt hàng thành công </h2>
    <p style="color:blue;text-align:center">Cảm ơn bạn đã mua hàng!</p>

    <div class="order-info" style="width:700px;margin-left: 256px;">
       
        <p><b>Mã đơn hàng:</b> @Model.Id_Order</p>
        <p><b>Ngày đặt hàng:</b> @Model.Order_Date</p>
        <p><b>Tổng tiền:</b> @PhoneShop.Extension.Extension.ToVnd((double)Model.Total_Order)</p>
        @if(Model.PaymentMethod == 1)
        {
            <p><b>Phương thức thanh toán:</b> Thanh toán khi nhận hàng</p>
        }
        else
        {
            <p><b>Phương thức thanh toán:</b> Thanh toán trực tuyến</p>
        }

        <p><b>Địa chỉ giao hàng:</b> @Is_Info_Address.Address</p>
        <a class="btn btn-success" style="font-size:12px;font-weight:normal;background:#5a88ca;" href="~/">Trở về</a>
        <a class="btn btn-success" style="font-size:12px;font-weight:normal;background:#5a88ca" href="/Utilities/ListOrder">Xem đơn hàng</a>

    </div>
    
    <br />
    
   
</div>



