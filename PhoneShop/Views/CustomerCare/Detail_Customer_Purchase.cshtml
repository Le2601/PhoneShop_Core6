@model List<PhoneShop.Controllers.Seller.DataView.CustomerPurchase>
@{
    ViewData["Title"] = "Detail_Customer_Purchase";
    Layout = "~/Views/Shared/Seller/_SellerLayout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link"> Khách hàng thân thiết </a>
        </li>
    </ul>
}
<br />
<section class="content" style="background:white">

    <h3 class="text-center mb-3">Khách hàng thân thiết</h3>
    <div class="form-group">

        @if (Model != null)
        {
            <div class="row">
                <div class="col-12 table-responsive" style="height:60vh; overflow-y: auto;">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th class="center">Tên sản phẩm</th>
                                <th class="center">Hình ảnh</th>
                                <th class="center">Số lượng</th>
                                <th class="center">Giá</th>
                                <th class="center">Ngày đặt</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>

                                    <td class="center">@i.ProductId</td>
                                    <td class="center">@i.ProductTitle</td>
                                    <td class="center"><img src="~/images/Product/@i.ImageProduct" width="100" height="100" style="border: solid 1px " /></td>

                                    <td class="center">@i.QuantityPurchase</td>
                                    <td class="center">@PhoneShop.Extension.Extension.ToVnd((double)i.PurchasePrice_Product)</td>
                                    <td class="center">@i.Date_Purchase.ToString("dd/MM/yyyy")</td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="callout callout-info">
                <h5><i class="fas fa-info"></i></h5>
                Hiện chưa có đơn hàng nào!
            </div>
        }


        </div>
        </section>

