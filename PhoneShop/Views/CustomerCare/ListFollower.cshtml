@model List<PhoneShop.Models.UserFollows>
@{
    ViewData["Title"] = "ListFollower";
    Layout = "~/Views/Shared/Seller/_SellerLayout.cshtml";
    int index = 1;
}

<style>
    .center {
        text-align: center
    }
</style>
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link"> Người dùng theo dõi gian hàng </a>
        </li>
    </ul>
}
<section class="content" style="background:white">

    <h3 class="text-center mb-3">Người dùng theo dõi gian hàng</h3>
    <div class="form-group">




        @if (Model != null)
        {
            <div class="row">
                <div class="col-12 table-responsive" style="height:60vh; overflow-y: auto;">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th class="center">Tên khách hàng</th>
                                <th class="center">Email</th>

                                
                                <th class="center"></th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>

                                    <td class="center">@(index++)</td>
                                    <td class="center">@i.Account.FullName</td>
                                    <td class="center">@i.Account.Email</td>

                                   
                                    <td></td>


                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="callout callout-info">
                <h5><i class="fas fa-info"></i></h5>
                Hiện chưa có đơn hàng nào!
            </div>
        }



    </div>

    <hr />



</section>

