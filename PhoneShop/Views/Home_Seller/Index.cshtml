    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; 
        gap: 10px; 
    }

    .info-item {
        display: flex;
        align-items: center; 
    }

        .info-item a {
            text-decoration: none; 
        }

    .value {
