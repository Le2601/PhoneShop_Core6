@model PhoneShop.Models.Booth_Information
@{
    ViewData["Title"] = "Update_Info_Seller";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
<style>
    .avatar-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 20px;
        border: 2px solid #ddd;
    }

    .avatar-upload-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

<form asp-action="Update" asp-controller="Info_Seller" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Cập nhật thông tin</h4>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">


                    <input asp-for="AccountId" hidden />
                    <input asp-for="Code_Info" hidden />
                    <input asp-for="Id" hidden />
                    <input asp-for="Avatar" hidden />


                    <div class="avatar-upload-container">
                        <h2>Upload Avatar</h2>

                        <!-- Avatar Preview -->
                        <img id="avatarPreview" class="avatar-preview" src="/images/default-avatar.png"  />

                        <!-- Upload Form -->
                        
                            <input type="file" id="avatarInput" name="avatar" accept="image/*" onchange="previewAvatar(event)" />
                           
                       
                    </div>

                    <div class="form-group">
                        @* <label asp-for="InputPrice" class="control-label"></label>
                        <input asp-for="InputPrice" class="form-control" />
                        <span asp-validation-for="InputPrice" class="text-danger"></span> *@
                    </div>

                    <div class="form-group">
                        <label asp-for="ShopName" class="control-label">Tên gian hàng</label>
                        <input asp-for="ShopName"  class="form-control" />
                        <span asp-validation-for="ShopName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>













                </div>


            </div>

            <!-- /.tab-content -->
        </div><!-- /.card-body -->
        <div class="card-footer">
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Cập nhật" />
            </div>
        </div>
    </div>

</form>


<script>
    // JavaScript to handle image preview
    function previewAvatar(event) {
        const [file] = event.target.files;
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('avatarPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
</script>