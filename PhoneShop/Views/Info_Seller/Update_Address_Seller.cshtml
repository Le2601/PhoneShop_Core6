@model PhoneShop.Models.ShopAddress
@{
    ViewData["Title"] = "Update_Address_Seller";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Update_Address_Seller" asp-controller="Info_Seller" method="post" class="form">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Cập nhật thông tin</h4>
        </div>
        <div class="card-body">
            <input asp-for="Id" hidden />
            <input asp-for="BoothId" hidden />
            <div class="form-group row">
                <label asp-for="FullName" class="col-sm-3 col-form-label">Tên người giao</label>
                <div class="col-sm-9">
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-3 col-form-label">Địa chỉ nhận hàng</label>
                <div class="col-sm-9">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address_Detail" class="col-sm-3 col-form-label">Địa chỉ cụ thể</label>
                <div class="col-sm-9">
                    <input asp-for="Address_Detail" class="form-control" />
                    <span asp-validation-for="Address_Detail" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Cập nhật" />
            </div>
        </div>
    </div>
</form>




