@model PhoneShop.Data.BoothData
<style>
    .containerbooth {
        display: flex;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid #eaeaea;
    }

    .logo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: url('https://placehold.co/60x60') no-repeat center center;
        background-size: cover;
    }

    .shop-info {
        margin-left: 20px;
        flex-grow: 1;
    }

        .shop-info h1 {
            font-size: 18px;
            margin: 0;
            color: #333;
        }

        .shop-info p {
            font-size: 14px;
            color: #999;
            margin: 5px 0 0 0;
        }

    .buttons {
        display: flex;
        align-items: center;
    }

        .buttons .btn {
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 14px;
            margin-right: 10px;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

    .btn-chat {
        background-color: #d0011b;
        color: #fff;
        border: 1px solid #d0011b;
    }

    .btn-shop {
        background-color: #fff;
        color: #333;
        border: 1px solid #eaeaea;
    }

        .btn-shop:hover{
            color:black;
        }

    .btn i {
        margin-right: 5px;
    }

    .stats {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

        .stats div {
            text-align: center;
        }

            .stats div p {
                margin: 0;
                color: #999;
                font-size: 14px;
            }

            .stats div span {
                display: block;
                color: #d0011b;
                font-size: 16px;
                margin-top: 5px;
            }
</style>
@{
    DateTime CreateDate = Model.Create_Booth;
    int daysSinceCreated = (DateTime.Now - CreateDate).Days;
}

<div class="containerbooth">
    <div class="logo">
        <img src="~/images/AvatarBooth/@Model.Avatar" alt="Avatar" class="booth-avatar" style="width: 60px; height: 58px; border-radius: 50%; border: 2px solid #007bff; object-fit: cover;">
     </div>
    <div class="shop-info">
        <h1>@Model.BoothName</h1>
       
    </div>
    <div class="buttons">
        <a href="#" class="btn btn-chat"><i class="fas fa-comments"></i> Chat Ngay</a>
        <a href="/detail_booth/@Model.BoothId" class="btn btn-shop"><i class="fas fa-store"></i> Xem Shop</a>
    </div>
</div>
<div class="stats">
    <div>
        <p>Đánh Giá</p>
        <span>@Model.Total_Comment</span>
    </div>
   
    <div>
        <p>Tham Gia Từ</p>
        @if (daysSinceCreated == 0)
        {
            <span>1 Ngày Trước</span>

        }
        else
        {
            <span>@daysSinceCreated Ngày Trước</span>
        }
       
    </div>
    <div>
        <p>Sản Phẩm</p>
        <span>@Model.Quantity_Product</span>
    </div>
   
    <div>
        <p>Người Theo Dõi</p>
        <span>@Model.Followers</span>
    </div>
</div>