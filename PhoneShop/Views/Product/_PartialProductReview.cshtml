@using PhoneShop.ModelViews
@using PhoneShop.Models;

@model List<Product_ReviewModelView>
@{
    List<FeedBackComment> GetFeedBack = ViewBag.FeedBack;
}

    <Style>

   
    
    .comment-author {
        display: flex;
        align-items: center;
    }

    .author-info {
        display: flex;
        flex-direction: column;
        margin-left: 8px;
    }

    .author-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }

    .comment-date {
        font-size: 12px;
        color: #888;
    }
    .comment-container {
        border: 1px solid #e5e5e5;
        border-radius: 4px;
        padding: 16px;
        margin-bottom: 16px;
        background-color: #fff;
    }

    .comment-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .comment-author {
        display: flex;
        align-items: center;
    }

    .author-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .author-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }

    .comment-actions {
        display: flex;
        align-items: center;
    }

    .delete-btn {
        font-size: 14px;
        color: #ee4d2d;
        text-decoration: none;
    }

        .delete-btn:hover {
            color: #c53c1a;
        }

    .comment-content {
        font-size: 14px;
        color: #555;
        line-height: 1.5;
    }
    </Style>

@if (Model != null && Model.Count() > 0)
{

    foreach (var item in Model)
    {
        <div class="comment-container">
            <div class="comment-header">
                <div class="comment-author">
                    <div><i class="fa fa-user-circle-o" aria-hidden="true"></i></div>
                    <span class="author-name">@item.UserName</span>
                </div>

                @if (item.UserEmail == ViewBag.taikhoanEmail)
                {
                    <div class="dropdown">
                        <button class="dropbtn">⋮</button>
                        <div class="dropdown-content">
                            <a href="/Product/Delete_Comment/@item.Id">Xóa</a>
                        </div>
                    </div>
                }
            </div>
            <div class="comment-content">
                <span class="comment-date">@item.CreateAt.ToString("dd/MM/yyyy")</span>
                <p class="comment-text">@item.Content</p>
                <div class="comment-reply-container">
                    <a href="#" class="comment-reply-button">Trả lời</a>
                </div>
            </div>
        </div>

        //reply
        <div class="replies-container">

            @foreach (var i in GetFeedBack)
            {
                if(item.Id == i.RwProductId)
                {
                    <div class="reply-container" style="margin-left: 40px;">
                        <div class="reply-header">
                            <div class="reply-author">
                                <div><i class="fa fa-user-circle-o" aria-hidden="true"></i></div>
                                <span class="author-name">@i.UserNameFeedBack</span>
                            </div>

                        </div>
                        <div class="reply-content">
                            <span class="reply-date">@i.Create_At.ToString("dd/MM/yyyy HH:mm:ss")</span>
                            <p class="reply-text">@i.Content</p>
                        </div>
                    </div>
                }
                
            }
           
            
            
        </div>


    


    }
}


