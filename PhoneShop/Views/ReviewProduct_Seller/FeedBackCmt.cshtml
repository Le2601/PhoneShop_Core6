@model PhoneShop.Models.ProductQuestions
@using PhoneShop.Models;
@{
    ViewData["Title"] = "FeedBackCmt";
    Layout = "~/Views/Shared/Seller/_SellerLayout.cshtml";

    List<FeedBackComment> GetListFeedBack = ViewBag.GetListFeedBack;
}
<style>
    .feedback-item {
        padding: 10px;
        border: 1px solid #ddd; 
        border-radius: 5px; 
        margin-bottom: 10px; 
        background-color: #f9f9f9; 
    }

    .btn-primary {
        background-color: #007bff; 
        color: white; 
        border: none; 
        border-radius: 5px; 
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3; 
        }
</style>
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link"> Đánh giá sản phẩm </a>
        </li>
    </ul>
}
<section class="content" >

    <div class="col-12" >
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Đánh Giá Sản Phẩm</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body" style="min-height:500px;">

                
                <p style="color:blue">@Model.Content</p>
                <p style="font-style: italic;">@Model.CreateAt</p>

                <hr />

                <h5>Phản hồi</h5>
                @if (GetListFeedBack.Count > 0)
                {
                    foreach (var item in GetListFeedBack)
                    {
                        <div class="feedback-item">
                             @item.UserNameFeedBack <span style="color: #aaa;">|| @item.Create_At</span>
                            <div style="color:red"> @item.Content</div>
                            <hr />
                        </div>
                    }
                }
                else
                {
                    <div>Không có phản hồi nào.</div>
                }

                <hr />

                <form method="post" action="/ReviewProduct_Seller/CreateFeedBackCmt" style="margin-top: 20px;">
                    <input type="hidden" name="RwProductId" value="@Model.Id" />
                    <textarea name="Content" rows="3" placeholder="Nhập bình luận của bạn..." required style="width: 100%; padding: 10px; margin-bottom: 10px;"></textarea>
                    <input type="submit" value="Bình Luận" class="btn btn-primary" style="padding: 10px 15px;" />
                </form>

            </div>
            <!-- /.card-body -->
        </div>
    </div>
</section>

