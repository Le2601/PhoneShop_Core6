@model List<PhoneShop.Models.SupportContent>
@{
    ViewData["Title"] = "ListSupportDirectory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   

    .content-header {
        margin-bottom: 20px;
    }

    .faq-item {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: white;
        cursor: pointer;
    }

    .faq-content {
        display: none;
        padding: 10px;
        border-top: 1px solid #ddd;
        background-color: #f1f1f1;
    }
</style>
<br />

<div class="container" style="background:white; min-height:500px">
    <h4 style="margin-top:30px" class="content-header">@Html.Raw(ViewBag.Titlsp)</h4>

    @foreach (var item in Model)
    {
        string value =  "content" + item.Id;
        <div class="faq-item" onclick="toggleContent('@value')">
            <strong>@item.Title</strong>
            <div id="@value" class="faq-content">
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>


    }
   
</div>




            @section Scripts{

    <script>
        function toggleContent(contentId) {
            const content = document.getElementById(contentId);
            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        }
    </script>
            }