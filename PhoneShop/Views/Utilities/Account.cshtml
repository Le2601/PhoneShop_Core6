@model PhoneShop.Models.Account
@{
    ViewData["Title"] = "a";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("MenuUtilities")
<div class="container" style="min-height:600px">

    <div class="row">

        <h1>Thông tin cá nhân</h1>
        <p>Email: @Model.Email</p>
        <p>Ngày tạo: @Model.CreateDate</p>
        <form asp-action="Update" asp-controller="Account" method="post">
            <input type="hidden" asp-for="Id">
            <div class="form-group">
                <label for="name">Họ và tên:</label>
                <input type="text" asp-for="FullName" placeholder="Nhập họ và tên" required>
            </div>
            <div class="form-group">
                <label for="Phone">Số điện thoại:</label>
                <input type="text" asp-for="Phone" placeholder="Nhập số điện thoại" required>
            </div>

            <div class="form-group">
                <button type="submit">Xác nhận chỉnh sửa</button>
            </div>
        </form>
</div>
</div>
