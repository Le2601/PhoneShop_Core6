@model PhoneShop.Models.Account
@{
    ViewData["Title"] = "a";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("MenuUtilities")

<style>
    .profile-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        min-height:600px;
        margin:auto
    }

    .profile-header {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
        text-align: center;
    }

    .profile-info {
        margin: 5px 0;
        font-size: 16px;
        color: #555;
    }

    .profile-form-group {
        margin-bottom: 15px;
    }

    .profile-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .profile-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
        color: #333;
    }

        .profile-input:focus {
            border-color: #007bff;
            outline: none;
        }

    .profile-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .profile-button:hover {
            background-color: #0056b3;
        }

    
</style>

<div class="profile-container">
    <h1 class="profile-header">Thông tin cá nhân</h1>
    <p class="profile-info">Email: @Model.Email</p>
    <p class="profile-info">Ngày tạo: @Model.CreateDate</p>
    <form asp-action="Update" asp-controller="Account" method="post">
        <input type="hidden" asp-for="Id">
        <div class="profile-form-group">
            <label for="name" class="profile-label">Họ và tên:</label>
            <input type="text" asp-for="FullName" class="profile-input" placeholder="Nhập họ và tên" required>
        </div>
        <div class="profile-form-group">
            <label for="Phone" class="profile-label">Số điện thoại:</label>
            <input type="text" asp-for="Phone" class="profile-input" placeholder="Nhập số điện thoại" required>
        </div>

        <div class="profile-form-group profile-button-group">
            <button type="submit" class="profile-button">Lưu</button>
        </div>
       
    </form>
</div>
