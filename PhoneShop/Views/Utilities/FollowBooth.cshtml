@model List<PhoneShop.Data.BoothData>
@{
    ViewData["Title"] = "FollowBooth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Styling for the booth list */
    .booth-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-gap: 20px;
        list-style-type: none;
        padding: 0;
    }

    .booth-item {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .booth-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .booth-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .booth-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .booth-description {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
    }

    .booth-details {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        color: #888;
    }
    .profile-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        min-height: 600px;
        margin: auto
    }

    .profile-header {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
        text-align: center;
    }

    .profile-info {
        margin: 5px 0;
        font-size: 16px;
        color: #555;
    }

    .profile-form-group {
        margin-bottom: 15px;
    }

    .profile-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .profile-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
        color: #333;
    }

        .profile-input:focus {
            border-color: #007bff;
            outline: none;
        }

    .profile-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .profile-button:hover {
            background-color: #0056b3;
        }


/*         /////////////////
 */


</style>
@await Component.InvokeAsync("MenuUtilities")
<div class="profile-container">
    <h1 class="profile-header">Gian hàng theo dõi</h1>

    <ul class="booth-list">
        @foreach (var item in Model)
        {
            <a style="text-decoration: none;" href="/detail_booth/@item.BoothId">
            <li class="booth-item">
               
                <h3 class="booth-name">@item.BoothName</h3>
                <p class="booth-description">Đánh giá: @item.Total_Comment</p>

                <div class="booth-details">
                    <span>Sản phẩm: @item.Quantity_Product</span>
                    <span>Người theo dõi: @item.Followers</span>
                </div>
            </li>
            </a>
        }


    </ul>

    
   
</div>


