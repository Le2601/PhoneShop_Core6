@model List<PhoneShop.ModelViews.VoucherViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    //format tien

    // Lấy mã vùng địa phương cho tiếng Việt nếu có, nếu không thì chọn một mã vùng khác
    CultureInfo culture = CultureInfo.GetCultures(CultureTypes.SpecificCultures)
                                    .FirstOrDefault(c => c.Name.StartsWith("vi", StringComparison.OrdinalIgnoreCase))
                           ?? CultureInfo.CurrentCulture;

   
}


<style>
    .voucher-item {
        border: 1px solid #ccc;
        padding: 15px;
        margin-bottom: 20px;
    }

    .voucher-code {
        font-size: 18px;
        font-weight: bold;
    }

    .voucher-discount {
        font-size: 24px;
        color: red;
    }

    .voucher-expiry {
        font-size: 14px;
        color: #888;
    }
    /* Menu dọc bên trái */
    .row {
        display: flex;
    }

    /* Menu dọc bên trái */
    .sidebar {
        width: 200px;
        height: 100vh;
        background-color: #f1f1f1;
        padding: 20px;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 10px;
    }

    a {
        display: block;
        text-decoration: none;
        color: #000;
    }

        a:hover {
            background-color: #ddd;
        }

    /* Nội dung bên phải */
    .content {
        flex: 1;
        padding: 20px;
    }

    
</style>
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Voucher</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<div class="container" style="min-height:600px">
    <div class="row">
       

        @foreach(var item in Model)
        {
            <div class="col-md-6 col-sm-12">
                <div class="voucher-item">
                    <div class="voucher-code">@item.Code</div>
                    <div class="voucher-discount">
                        @{



                            string DiscountAmount = item.DiscountAmount.ToString("C", culture); // "C" là định dạng tiền tệ




                        }
                        Giảm: @DiscountAmount
                    </div>

                    <div class="voucher-discount">
                        @{



                            string DiscountConditions = item.DiscountConditions.ToString("C", culture); // "C" là định dạng tiền tệ




                        }
                        Điều kiện: @DiscountConditions
                    </div>
                    <div class="voucher-expiry">Ngày hết hạn: @item.ExpiryDate</div>
                        <a class="btn btn-success voucher" data-id="@item.Id">Lưu</a>
                </div>
            </div>
        }

    </div>

   
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('body').on('click', '.voucher', function () {
                var id = $(this).data('id');
                          
               
                

                    $.ajax({

                        url: '/Voucher/Add',
                        type: 'post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                alert("Them thanh cong");

                                location.reload();
                            }
                            else {
                                alert("Them that bai");

                                location.reload();
                            }
                        }

                    });

                
            });
        });
    </script>
        

    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            showContent('content1'); // Hiển thị nội dung 1 mặc định khi trang được tải lên
        });

        function showContent(id) {
            var contents = document.getElementsByClassName("content-item");
            for (var i = 0; i < contents.length; i++) {
                contents[i].style.display = "none";
            }
            var content = document.getElementById(id);
            if (content) {
                content.style.display = "block";
            }
        }
    </script>

}