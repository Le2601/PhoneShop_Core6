@model PhoneShop.Areas.Admin.Data.VoucherData
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Seller/_SellerLayout.cshtml";
}

<section class="content">

    <div class="col-12">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create" asp-controller="Voucher_Seller" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="card-body">
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" asp-for="IsActive" class="custom-control-input" id="customSwitch1">
                            <label class="custom-control-label" for="customSwitch1">Hiển thị</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã giảm giá <span style="color:red">*</span></label>
                        <input asp-for="Code" class="form-control" value="123" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountProduct" class="control-label">Tiền giảm cho sản phẩm <span style="color:red">*</span></label>
                        <input asp-for="DiscountProduct" class="form-control" required />
                        <span asp-validation-for="DiscountProduct" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountConditions" class="control-label">Điều kiện tối thiểu <span style="color:red">*</span></label>
                        <input asp-for="DiscountConditions" class="form-control" required />
                        <span asp-validation-for="DiscountConditions" class="text-danger"></span>
                    </div>               
                    <div class="form-group">
                        <label asp-for="ExpiryDate" class="control-label">Ngày hết hạn <span style="color:red">*</span></label>
                        <input asp-for="ExpiryDate" class="form-control" required />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label">Số lượng <span style="color:red">*</span></label>
                        <input asp-for="Quantity" class="form-control" required />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Mô tả <span style="color:red">*</span></label>
                        <input asp-for="Description" class="form-control" required />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                   
                   
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>

    </div>
</section>


@section scripts_SellerHome{
    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $('#summernote').summernote({
            placeholder: 'Nội dung',
            tabsize: 2,
            height: 100
        });
    </script>
   
}



